<script>

// :: 셀렉트박스 스크립트(공용)
$(document).on('click', '.sbox a', function(){
	$(this).siblings('ul').slideToggle();
})


// :: 정기배송 이용여부 체크 스크립트
$(document).on('click', '.script_regularFalse', function(){
	
	$('.regularUsage .useSelector a').parent('li').removeClass('activated');
	$(this).parent('li').addClass('activated');
	$('.infoRegTable .regularInfoReg').hide();
});
$(document).on('click', '.script_regularTrue', function(){
	
	$('.regularUsage .useSelector a').parent('li').removeClass('activated');
	$(this).parent('li').addClass('activated');
	$('.infoRegTable .regularInfoReg').show();
});

// :: 정기배송 기간 선택 스크립트 
$(document).on('click', '.script_regularDuration a', function(){
	
	$('.regularInfoReg .useSelector a').parent('li').removeClass('activated');
	$(this).parent('li').addClass('activated');
});

// :: 셀렉트박스 내용 선택시, 셀렉트박스 리스트 닫기 스크립트(공용)
$(document).on('click', '.sbox ul li', function(){
	$(this).parent('ul').slideToggle();
})
</script>
