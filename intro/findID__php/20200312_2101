<script>

// :: 비밀번호 변경 팝업 오픈 스크립트
$(document).on('click', '.changeIDBtn', function(){
	$('.popup.findID').show();
	$('.container').addClass('overlay');
});

// :: 팝업 닫기 스크립트
$(document).on('click', '.closePopBtn', function(){
	$('.popup.findID').hide();
	$('.container').removeClass('overlay');
});



</script>
